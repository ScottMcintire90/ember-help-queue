{{#if newTicketShow}}
  <form>
    <div class="form-group">
     {{input value=name id="name" placeholder="Name"}}
   </div>

   <div class="form-group">
     {{input value=location id="location" placeholder="Location"}}
   </div>

   <div class="form-group">
     {{input value=message id="message" placeholder="Message"}}
   </div>

   <button class="btn btn-success" {{action 'saveTicket'}}>Ask</button>
  </form>
{{else}}
  <button class="btn-success" {{action 'showTicket'}}>Add Ticket</button>
{{/if}}
