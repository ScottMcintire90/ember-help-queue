{{#if newTicketShow}}
  <form class="ticketForm">
    <div class="form-group">
     {{input class="form-control" value=name id="name" placeholder="Name"}}
   </div>

   <div class="form-group">
     {{input class="form-control" value=location id="location" placeholder="Location"}}
   </div>

   <div class="form-group">
     {{input class="form-control" value=message id="message" placeholder="Message"}}
   </div>

   <button class="btn btn-success" {{action 'saveTicket'}}>Submit</button>
  </form>
{{else}}
  <button id="newTick" class="btn-primary" {{action 'showTicket'}}>Add Ticket</button>
{{/if}}
